generator client {
  provider = "prisma-client"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
}


model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          Role      @default(STUDENT)
  
  // Profile Fields
  bio              String?
  course           String?
  batch            String?   // Graduation Year
  isProfileComplete Boolean  @default(false)
  
  accounts      Account[]
  sessions      Session[]
  requests      ConnectionRequest[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Alumni {
  id             String              @id @default(cuid())
  name           String
  email          String?             @unique // Optional, for admin contact if needed
  course         String
  graduationYear Int
  currentRole    String?
  company        String?
  domain         String? // Industry/Domain
  location       String?
  summary        String?
  linkedin       String?
  image          String?             // URL to profile photo
  isVerified     Boolean             @default(true) // Defaults to true since admins create them
  createdAt      DateTime            @default(now())
  updatedAt      DateTime            @updatedAt
  requests       ConnectionRequest[]

  @@index([name, company, location, domain])
}

model ConnectionRequest {
  id           String          @id @default(cuid())
  studentName  String
  studentEmail String
  subject      String
  message      String
  category     RequestCategory
  status       RequestStatus   @default(PENDING)
  alumniId     String
  alumni       Alumni          @relation(fields: [alumniId], references: [id])
  studentId    String?
  student      User?           @relation(fields: [studentId], references: [id])
  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt
}

enum Role {
  ADMIN
  SUPERADMIN
  STUDENT
}

enum RequestStatus {
  PENDING
  APPROVED
  REJECTED
  RESOLVED
}

enum RequestCategory {
  MENTORSHIP
  CAREER_GUIDANCE
  INTERNSHIP
  NETWORKING
  OTHER
}
